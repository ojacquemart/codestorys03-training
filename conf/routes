# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /                      controllers.Application.status
GET        /resets                controllers.Application.resets

GET        /reset                 controllers.Application.reset(lowerFloor: Int, higherFloor: Int, cabinSize: Int, cabinCount: Int, cause: String)
GET        /call                  controllers.Application.call(atFloor: Int, to: String)
GET        /go                    controllers.Application.go(cabin: Int, floorToGo: Int)
GET        /userHasEntered        controllers.Application.userHasEntered(cabin: Int)
GET        /userHasExited         controllers.Application.userHasExited(cabin: Int)

GET        /nextCommands           controllers.Application.nextCommands
